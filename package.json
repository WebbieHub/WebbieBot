{
  "name": "WebbieBot",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "https://github.com/WebbieHub/WebbieBot",
  "author": "Julien <jbertazzolambert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn run dev-bot\" \"yarn run dev-site\"",
    "build-bot": "tsc",
    "run": "node build/index.js",
    "clean": "rm -rf build/**/*",
    "deploy-cmds": "node build/bot/deploy-commands",
    "build-css": "npx tailwindcss -i ./website/css/src/index.css -o ./website/css/dist/index.css",
    "dev-site": "npx tailwindcss -i ./website/css/src/index.css -o ./website/css/dist/index.css --watch",
    "dev-bot": "nodemon -w ./src -e \"js ts html\" --exec \"yarn build && node build/index.js\"",
    "build": "yarn run build-bot && yarn run build-css"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.2",
    "yarn": "^1.22.18"
  },
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "axios": "^0.26.0",
    "discord-api-types": "^0.28.0",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mongodb": "^4.4.1"
  }
}
